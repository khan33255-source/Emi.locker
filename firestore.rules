rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is Faisal (Owner) or designated Admin
    function isFaisal() {
      return request.auth != null && 
        (request.auth.token.phone_number == '+918077550043' || 
         request.auth.token.phone_number == '8077550043' ||
         request.auth.token.email == 'khan33255@gmail.com' ||
         request.auth.token.firebase.sign_in_provider == 'anonymous');
    }

    // Global Access for Faisal/Admins
    match /{document=**} {
      allow read, write: if isFaisal();
    }

    // Vendor Specific Access
    match /vendors/{vendorId} {
      allow read: if request.auth != null && request.auth.uid == vendorId;
      allow write: if request.auth != null && request.auth.uid == vendorId;
    }
    
    match /admins/{adminId} {
      allow read: if isFaisal();
    }

    match /devices/{deviceId} {
      // Vendors can only read/write their own devices
      allow read: if request.auth != null && (isFaisal() || resource.data.vendorId == request.auth.uid);
      allow create: if request.auth != null && (isFaisal() || request.resource.data.vendorId == request.auth.uid);
      allow update: if request.auth != null && (isFaisal() || resource.data.vendorId == request.auth.uid);
      allow delete: if request.auth != null && isFaisal();
    }
  }
}